if (_box_open &amp;&amp; current_line!=noone) {
    var line = current_line;
    for (var i=0;i&lt;current_line.control_n;i++) {
        var player = current_line.control_v[i];
        if (controller.cancel_pressed[player] &amp;&amp; line.f_skip)
            _skip_line = true;
        if (controller.cancel_pressed[player] &amp;&amp; _can_advance &amp;&amp; line.option_n==0)
            _advance=true;
        if (controller.select_pressed[player] &amp;&amp; _can_advance)
            _advance=true;
        if (controller.left_pressed[player] &amp;&amp; _can_advance &amp;&amp; line.option_n&gt;1)
            _option_selected--;
        if (controller.right_pressed[player] &amp;&amp; _can_advance &amp;&amp; line.option_n&gt;1)
            _option_selected++;
    }
    if (line.option_n&gt;0) //sanitize option selected
        _option_selected = (_option_selected % line.option_n + line.option_n) % line.option_n;
    if (_advance) {
        assert(_can_advance);
        //don't accidentally skip next line of dialogue:
        _skip_line=false;
        _result=_option_selected;
        dialogue_advance();
    }
}

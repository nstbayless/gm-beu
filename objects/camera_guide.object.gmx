            <string>if (active) {
    var focus=camera.focus;
    assert(instance_exists(camera.focus));
    switch (camera_guide_style) {
    case cgs_interp_next_x:
        var minx=x;
        assert(instance_exists(next));
        var maxx=next.x;
        if (focus.x&lt;minx) switch_to(prev);
        if (focus.x&gt;maxx) switch_to(next);
        var p=(focus.x-minx)/(maxx-minx)
        camera.y=get_draw_y(p*next.y+(1-p)*y,p*next.z+(1-p)*z)
        camera.aot=p*next.aot+(1-p)*aot;
        camera.skew=p*next.skew+(1-p)*skew;
        break;
    case cgs_capl:
        camera.x=get_draw_x();
        camera.y=get_draw_y();
        camera.aot=aot;
        camera.skew=skew;
        if (focus.x&gt;x)
            switch_to(next);
        break;
    case cgs_capr:
        camera.x=get_draw_x();
        camera.y=get_draw_y();
        camera.aot=aot;
        camera.skew=skew;
        if (focus.x&lt;x)
            switch_to(prev);
        break; 
    }
}


